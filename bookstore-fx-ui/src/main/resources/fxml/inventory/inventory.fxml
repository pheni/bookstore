<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TabPane prefHeight="400.0"
         prefWidth="600.0" xmlns="http://javafx.com/javafx/8" BorderPane.alignment="CENTER"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="cu.pdi.bookstore.fx.gui.inventory.InventoryController">
    <tabs>
        <Tab text="Inventario" closable="false">
            <content>
                <AnchorPane>
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="2.0" AnchorPane.bottomAnchor="1.0"
                              AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="1.0">
                            <children>
                                <HBox alignment="CENTER" fillHeight="false" spacing="3.0" VBox.vgrow="NEVER">
                                    <children>
                                        <Label text="Filtro:"/>
                                        <AnchorPane HBox.hgrow="ALWAYS">
                                            <children>
                                                <TextField fx:id="txFilter" AnchorPane.bottomAnchor="0.0"
                                                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                           AnchorPane.topAnchor="0.0"/>
                                            </children>
                                        </AnchorPane>
                                        <Button fx:id="btnCleanFilter" mnemonicParsing="false"
                                                onAction="#cleanFilterField" text="X"/>
                                        <CheckBox fx:id="chkSelectAll" alignment="CENTER" mnemonicParsing="false"
                                                  onAction="#selectAllBooks" text="Seleccionar todos"/>
                                    </children>
                                </HBox>
                                <ScrollPane fitToHeight="true" fitToWidth="true" prefViewportHeight="307.0"
                                            prefViewportWidth="598.0" VBox.vgrow="ALWAYS">
                                    <content>
                                        <TableView fx:id="tbBooksInventory" layoutX="1.0" layoutY="1.0"
                                                   tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0"
                                                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                   AnchorPane.topAnchor="0.0">
                                            <columns>
                                                <TableColumn fx:id="tcCodigo" prefWidth="75.0" text="Código"/>
                                                <TableColumn fx:id="tcTitulo" prefWidth="75.0" text="Título"/>
                                                <TableColumn fx:id="tcAutor" prefWidth="75.0" text="Autor"/>
                                                <TableColumn fx:id="tcEditorial" prefWidth="75.0" text="Editorial"/>
                                                <TableColumn fx:id="tcAnnoEdicion" prefWidth="75.0" text="Año edición"/>
                                                <TableColumn fx:id="tcPlan" prefWidth="75.0" text="Plan"/>
                                                <TableColumn fx:id="tcCategoria" prefWidth="75.0" text="Categoría"/>
                                                <TableColumn prefWidth="75.0" text="Existencia">
                                                    <columns>
                                                        <TableColumn fx:id="tcCantidadSalon" prefWidth="75.0"
                                                                     text="Salón"/>
                                                        <TableColumn fx:id="tcCantidadAlmacen" prefWidth="75.0"
                                                                     text="Almacén"/>
                                                    </columns>
                                                </TableColumn>
                                                <TableColumn fx:id="tcPrecioVenta" prefWidth="75.0" text="Precio"/>
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                            </columnResizePolicy>
                                        </TableView>
                                    </content>
                                </ScrollPane>
                                <fx:include source="inventory_paging.fxml"/>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
    </tabs>
</TabPane>

